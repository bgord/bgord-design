{
  "name": "@bgord/design",
  "version": "1.1.0",
  "author": "Bartosz Gordon",
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/bun": "1.2.19",
    "@types/culori": "4.0.0",
    "@types/lodash": "4.17.20",
    "clean-css-cli": "5.6.3",
    "cspell": "9.2.0",
    "doiuse": "6.0.5",
    "gzip-cli": "1.2.0",
    "knip": "5.62.0",
    "lefthook": "1.12.2",
    "only-allow": "1.2.1",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "postcss-preset-env": "10.2.4",
    "shellcheck": "3.1.0",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "culori": "4.0.2",
    "lodash": "4.17.21"
  },
  "license": "MIT",
  "scripts": {
    "build": "bun build src/index.ts --format esm --outdir dist",
    "postbuild": "bash scripts/prepare-css-files.sh",
    "prepublish": "bash scripts/prepare-css-files.sh",
    "preinstall": "bunx only-allow bun"
  },
  "main": "./dist/lib.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "require": "./dist/lib.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ]
